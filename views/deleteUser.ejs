    <script>
        document.getElementById('openConfirmationDialog').addEventListener('click', function() {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('confirmationDialog').style.display = 'block';
        });

        document.getElementById('cancelDelete').addEventListener('click', function() {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('confirmationDialog').style.display = 'none';
            window.location.href = '/v1/api/users/dashboard'; // Redirect to dashboard
        });

        document.getElementById('confirmDelete').addEventListener('click', async function() {
            const formData = new FormData();
            formData.append('_method', 'DELETE');

            try {
                const response = await fetch('/v1/api/users/delete/:id', {
                    method: 'DELETE',
                    body: new URLSearchParams(formData),
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                });

                if (response.ok) {
                    alert('User account successfully deleted.');
                    window.location.href = '/v1/api/users/signup'; // Redirect to logout or another appropriate page
                } else {
                    const errorData = await response.json();
                    alert(`Error: ${errorData.message}`);
                }
            } catch (error) {
                console.error('Error deleting user:', error);
                //alert('An error occurred while deleting the account.');
            }

            document.getElementById('overlay').style.display = 'none';
            document.getElementById('confirmationDialog').style.display = 'none';
        });
    </script>
